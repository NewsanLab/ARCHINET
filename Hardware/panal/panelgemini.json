{
    "layout": {
        "style": "grid",      // Estilo de disposición en rejilla
        "rows": "2",          // 2 filas de PCBs
        "cols": "2",          // 2 columnas de PCBs
        "hspace": "3mm",      // Espacio horizontal entre PCBs (ligeramente aumentado para pestañas/cortes)
        "vspace": "3mm"       // Espacio vertical entre PCBs (ligeramente aumentado)
        // "alternation": "none" // No rotar boards alternas (puede ser "rows" o "cols" si ayuda al layout o componentes)
    },
    "tabs": {
        "type": "fixed",      // Tipo de pestaña: fijar cantidad y tamaño
        "width": "4mm",       // Ancho de la pestaña sólida (donde NO hay mouse bites)
        "vcount": "2",        // 2 pestañas verticales entre boards
        "hcount": "2",        // 2 pestañas horizontales entre boards
        "gap": "0.5mm"        // Ancho del web de material en el corte (por defecto KiKit maneja esto bien con mouse bites)
    },
    "cuts": {
        "type": "mousebites", // Tipo de corte: Mouse Bites (perforaciones pequeñas)
        "drill": "0.5mm",     // Diámetro de las perforaciones
        "spacing": "1mm",     // Espacio entre centros de perforación
        "offset": "0.3mm",    // Distancia del centro de perforación al borde de corte
        "prolong": "0.5mm",   // Extensión del corte de fresado más allá de la última perforación
        "gap": "0.5mm"        // El espacio fresado entre las perforaciones (debe ser al menos el radio de la fresa + un pequeño margen)
        // "layer": "User.Cuts" // Opcional: Especificar capa para los cortes, si no se usa Edge.Cuts directamente. User.Cuts o similar es común para instrucciones al fabricante.
    },
    "framing": {
        "type": "frame",      // Tipo de marco: rectangular completo
        "width": "7mm",       // Ancho del marco (suficiente para utillaje, fiduciales y texto)
        "space": "5mm",       // Espacio entre la rejilla de PCBs y el borde interior del marco
        "cuts": "both",       // Realizar cortes en el marco (exterior e interior)
        "fillet": "3mm"       // Radio de las esquinas exteriores del marco
    },
     "text": {               // Añadir información de texto al panel
        "content": "PN: %P; Rev: %R; %D", // Contenido usando variables de KiCad (%P=Part Number, %R=Revision, %D=Date). Puedes añadir N° de Lote u otra info.
        "anchor": "mt",       // Anclar el texto en el centro superior del marco
        "size": "2mm",        // Tamaño del texto
        "thickness": "0.4mm", // Grosor de la línea del texto
        "hoffset": "0mm",     // Sin desplazamiento horizontal desde el ancla
        "voffset": "2mm"      // Desplazamiento vertical hacia abajo desde el ancla
        // "layer": "F.SilkS" // Capa para el texto, la serigrafía superior es común.
    },
    "tooling": {
        "type": "4hole",      // 4 agujeros de utillaje en las esquinas del marco
        "hoffset": "5mm",     // Desplazamiento horizontal desde el borde interior del marco
        "voffset": "5mm",     // Desplazamiento vertical desde el borde interior del marco
        "size": "3.2mm",      // Diámetro estándar de agujeros de utillaje
        "soldermaskmargin": "0.5mm" // Margen libre de máscara de soldadura
    },
    "fiducials": {
        "type": "3fid",       // 3 marcas fiduciales para alineación óptica
        "hoffset": "10mm",    // Desplazamiento horizontal desde el borde interior del marco (ajusta si 15mm es mejor)
        "voffset": "5mm",     // Desplazamiento vertical desde el borde interior del marco
        "opening": "2mm",     // Diámetro de la apertura de cobre
        "paste": "False",     // ¡IMPORTANTE! NO poner pasta de soldadura en las fiduciales de alineación óptica
        "soldermask": "True"  // Asegurar que tengan máscara de soldadura (suele ser el default si paste es false)
    },
     "copperfill": {         // Rellenar áreas vacías del panel con cobre
        "type": "solid",      // Relleno sólido
        "edgeclearance": "1mm", // Separación del cobre de relleno a los bordes/cortes
        "exclude": "fiducials, tooling" // Asegurar que el cobre no cubra fiduciales ni utillaje
    },
    "post": {
        "millradius": "2mm"   // Simulación del radio de la herramienta de fresado (fresa de 4mm de diámetro). ¡VERIFICA ESTE VALOR CON TU FABRICANTE!
    }
}